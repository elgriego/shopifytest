<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>
<h2>Productos</h2>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title.upcase, "https://#{@shop_session.domain}/admin/products/#{product.id}", target: "_top" %></li>
    <li><%=  product.body_html %></li>
    <li><%=  product.attributes %></li>
    <% product.variants.each do |v|%>
      <%= v.title %> - <%= v.price%> - <%= v.inventory_quantity%>
    <% end %>
  <% end %>
</ul>

<hr>